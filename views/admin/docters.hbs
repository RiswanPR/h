<div class="page-wrapper">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Duty Doctors</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="/admin/add-docters" class="btn btn-primary btn-rounded float-right"><i
                            class="fa fa-plus"></i> Add Doctor</a>
                </div>
            </div>
            <div class="row doctor-grid">

                {{#each duty_docters}}
                <div class="col-md-4 col-sm-4  col-lg-4">
                    <div class="profile-widget">
                    
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown"
                                aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">

                                <a class="dropdown-item" href="/admin/off-duty/{{this._id}}"><i
                                        class="fa-solid fa-business-time m-r-5"></i>Make Of Duty</a>

                                <a class="dropdown-item" href="/admin/edit-docter/{{this._id}}"><i
                                        class="fa fa-pencil m-r-5"></i> Edit</a>

                                <a class="dropdown-item" href="/admin/Fire-Docter/{{this._id}}"
                                    onclick=" return confirm('Are You Want to Fire Dr.{{this.Docter_Name}}')"
                                    data-toggle="modal"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                            </div>
                        </div>
                        <h1 class="doctor-name text-ellipsis">Dr. {{this.Docter_Name}}</h1>
                        <div class="doc-prof">{{this.Department_Name}}</div>

                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </div>

    <div class="container">


        <div class="row">

            <div class="col-sm-4 col-3">
                <h4 class="page-title">Off Duty Doctors</h4>
            </div>

        </div>
        <div class="row doctor-grid">

            {{#each offDuty_docters}}
            <div class="col-md-4 col-sm-4  col-lg-4">
                <div class="profile-widget">
                    
                    <div class="dropdown profile-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i
                                class="fa fa-ellipsis-v"></i></a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="/admin/on-duty/{{this._id}}"><i
                                    class="fa-solid fa-business-time m-r-5"></i>Make On Duty</a>
                            <a class="dropdown-item" href="/admin/edit-docter/{{this._id}}"><i
                                    class="fa fa-pencil m-r-5"></i> Edit</a>
                            <a class="dropdown-item" href="/admin/Fire-Docter/{{this._id}}"
                                onclick=" return confirm('Are You Want to Fire {{this.Docter_Name}}')"
                                data-toggle="modal"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                        </div>
                    </div>
                    <h1 class="doctor-name text-ellipsis">Dr. {{this.Docter_Name}}</h1>
                        <div class="doc-prof">{{this.Department_Name}}</div>

                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>