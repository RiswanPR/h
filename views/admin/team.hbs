<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-md-4 col-3">
                <h4 class="page-title">Our Team</h4>
            </div>
            <div class="col-md-8">
                <a class="btn btn-primary text-white" style="float: right;" href="/admin/add-team"> Add Permanent Docter</a>
            </div>


        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Docter Image</th>
                                <th>Docter Name</th>
                                <th>Department Name</th>
                                <th>Booking Time</th>
                                <th>Booking Dates</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Team}}
                            <tr>
                                <td>1</td>
                                <td><img style=" width: 100px; height: 100px;" src="/docter-images/{{this._id}}.jpg"></td>
                                <td>{{this.Docter_Name}}</td>
                                <td>{{this.Department_Name}}</td>
                                <td>{{this.Stime}} - {{this.Etime}}</td>
                                <td>{{this.Docter_Available}}</td>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown"
                                            aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="/admin/tedit-docter/{{this._id}}"><i 
                                                class="fa fa-solid fa-pencil-square-o" aria-hidden="true"></i> Edit Docter </a>
                                            <a class="dropdown-item" href="/admin/Fire-Team-Docter/{{this._id}}"
                                                onclick=" return confirm('Are You Sure to Fire {{this.Docter_Name}}')"><i 
                                                class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            {{/each}}

                         

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>